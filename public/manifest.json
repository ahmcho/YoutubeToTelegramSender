{
    "name": "YouTube â†’ Telegram",
    "description": "Send video with current timestamp to Telegram Channel",
    "version": "1.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo.png",
            "32": "logo.png",
            "48": "logo.png",
            "128": "logo.png"
        },
        "default_title": "Send any video with current timestamp"
    },
    "icons": {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["scripting", "tabs", "activeTab", "storage"],
    "host_permissions": ["https://www.youtube.com/*"]
}